# Smart Document Processing Platform - Environment Configuration

# Application Settings
APP_NAME=Smart Document Processing Platform
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_HOSTS=["*"]

# Database - PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=document_processing
POSTGRES_PORT=5432

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=document_storage

# Redis
REDIS_URL=redis://localhost:6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["application/pdf","application/msword","application/vnd.openxmlformats-officedocument.wordprocessingml.document","text/plain","image/jpeg","image/png","image/tiff"]

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Security
ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# WebSocket
WS_HEARTBEAT_INTERVAL=30
